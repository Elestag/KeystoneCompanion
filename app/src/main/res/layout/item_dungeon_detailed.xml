<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/boss_icon_1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boss_name_1"
        app:srcCompat="@drawable/creature_leymor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/boss_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/leymor"
        android:textColor="@color/baseWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:expandable_duration="500"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/boss_description_parent"
        app:expandable_secondLayout="@layout/boss_description"
        app:expandable_showSpinner="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boss_icon_1" />


</androidx.constraintlayout.widget.ConstraintLayout>
